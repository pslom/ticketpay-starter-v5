# Copy this file to .env.local and fill in values. DO NOT commit .env.local

# Postgres
DATABASE_URL=

# Environment
NODE_ENV=development
CITY_DEFAULT=SF

# Admin token for internal admin endpoints
ADMIN_TOKEN=

# Twilio
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM=

# Email providers
# One provider is enough; keep both wired if you want a fallback
RESEND_API_KEY=
SENDGRID_API_KEY=

# Single mailbox for all correspondence
MAIL_FROM_NAME=TicketPay
MAIL_FROM_EMAIL=info@ticketpay.us.com
MAIL_REPLY_TO=info@ticketpay.us.com

# Supabase
SUPABASE_ANON_KEY=

# Upstash Redis (optional, required for production rate-limiting)
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# Vercel deployment protection bypass secret (only for automation)
# Add this to Vercel project and to CI secrets (do NOT commit the value)
VERCEL_PROTECTION_BYPASS=

# Sentry (optional)
SENTRY_DSN=
